<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item-->
        <!--<item name="colorPrimary">#03ABF7</item>-->
        <item name="colorPrimary">@color/colorAccent</item>
        <!--<item name="colorPrimaryDark">#03ABF7</item>-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@drawable/guau1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextLabel" parent="TextAppearance.AppCompat">
        <!--EditText hint color-->
        <item name="android:textColorHint">@color/default_app_white</item>
        <item name="android:textSize">15sp</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/default_app_white</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/default_app_white</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/default_app_green</item>
        <item name="android:textColorPrimary">@color/default_app_green</item>
    </style>

    <style name="MyTextView" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColor">@color/default_app_green</item>
    </style>


    <style name="CustomCheckBox" parent="AppTheme">
        <item name="android:buttonTint">@color/default_app_green</item>
    </style>


   <style name="Button_style">
       <item name="android:elevation">1dp</item>
       <item name="android:translationZ">1dp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:background">@drawable/boton_redondo</item>
    </style>
</resources>
