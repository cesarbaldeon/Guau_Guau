<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/fondo_listas_canes"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar_mascota"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/boton_redondo"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foto_perror2" />

        <TextView
            android:id="@+id/avatar_nombre"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:padding="@dimen/narrow_space"
            android:theme="@style/TextViewStatic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/avatar_mascota"
            app:layout_constraintTop_toBottomOf="@+id/avatar_documento" />

        <TextView
            android:id="@+id/avatar_fechas_nac"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/narrow_space"
            android:theme="@style/TextViewStatic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_documento"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avatar_documento"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:padding="@dimen/narrow_space"
            android:theme="@style/TextViewStatic"
            app:layout_constraintEnd_toStartOf="@+id/avatar_fechas_nac"
            app:layout_constraintStart_toEndOf="@+id/avatar_mascota"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avatar_raza"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:padding="@dimen/narrow_space"
            android:theme="@style/TextViewStatic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/avatar_grupo"
            app:layout_constraintStart_toEndOf="@+id/avatar_mascota"
            app:layout_constraintTop_toBottomOf="@+id/avatar_nombre" />

        <TextView
            android:id="@+id/avatar_grupo"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="@dimen/narrow_space"
            android:theme="@style/TextViewStatic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_raza"
            app:layout_constraintTop_toBottomOf="@+id/avatar_nombre" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
